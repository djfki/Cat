<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2BAFC"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".FoodActivity">

    <Button
        android:id="@+id/btn_purina_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="การให้อาหารแมว แบบแห้งและแบบเปียก" />

    <Button
        android:id="@+id/btn_water"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="แมวเริ่มกินน้ำน้อยลง" />

    <Button
        android:id="@+id/btn_technique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เทคนิคการให้อาหารแมวและลูกแมวที่ควรรู้" />

    <Button
        android:id="@+id/btn_avoid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="เมนูอาหารที่น้องแมวควรหลีกเลี่ยง" />

</LinearLayout>